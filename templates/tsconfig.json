{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "target": "es2015"
  },
  "include": ["src"]
}
