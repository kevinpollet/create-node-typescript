{
  "name": "create-typescript-module",
  "version": "0.0.0",
  "description": "Create Node.js module in TypeScript",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kevinpollet/create-typescript-module#readme",
  "bugs": {
    "url": "https://github.com/kevinpollet/create-typescript-module/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinpollet/create-typescript-module.git"
  },
  "bin": "bin/create-typescript-module.js",
  "files": [
    "bin",
    "lib",
    "templates"
  ],
  "scripts": {
    "clean": "rimraf lib *.log",
    "format": "prettier --write '**/*.{ts,md,json}'",
    "lint:src": "tslint -p tsconfig.json",
    "build": "tsc",
    "prebuild": "run-s clean lint:src"
  },
  "devDependencies": {
    "@types/node": "8.10.39",
    "husky": "1.3.1",
    "lint-staged": "8.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.2",
    "rimraf": "2.6.3",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
