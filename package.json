{
  "name": "create-node-typescript",
  "version": "1.0.0-beta.2",
  "description": "Create a Node.js module in TypeScript without config boilerplate",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kevinpollet/create-node-typescript#readme",
  "bugs": {
    "url": "https://github.com/kevinpollet/create-node-typescript/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinpollet/create-node-typescript.git"
  },
  "keywords": [
    "initializer",
    "node",
    "typescript"
  ],
  "bin": "bin/create-node-typescript.js",
  "files": [
    "bin",
    "lib",
    "templates"
  ],
  "scripts": {
    "clean": "rimraf lib *.log",
    "format": "prettier --write '**/*.{ts,md,json}'",
    "lint:src": "tslint -p tsconfig.json",
    "build": "tsc",
    "prebuild": "run-s clean lint:src",
    "prepack": "run-s build",
    "preversion": "run-s build",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "commander": "2.19.0",
    "dashify": "2.0.0",
    "fs-extra": "7.0.1",
    "handlebars": "4.0.12",
    "inquirer": "6.2.2"
  },
  "devDependencies": {
    "@types/dashify": "1.0.0",
    "@types/fs-extra": "5.0.4",
    "@types/handlebars": "4.0.40",
    "@types/inquirer": "0.0.43",
    "@types/node": "8.10.39",
    "husky": "1.3.1",
    "lint-staged": "8.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.2",
    "rimraf": "2.6.3",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.4"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
